# Berkeley Mono
font-family = "TX-02"

# disable programming ligatures
font-feature = -calt

font-variation = wdth=100
font-variation = wght=500
font-variation-bold = wght=800

font-size = 13
# font-thicken = true
adjust-cell-height = 10%
cursor-style = "block"

# add a bit of padding between the cells & x-y edges of terminal window
window-padding-x = 4
window-padding-y = 4

# macOS specific configuration:
macos-option-as-alt = true
macos-auto-secure-input = true
macos-secure-input-indication = true

macos-icon = custom-style
macos-icon-frame = beige

auto-update = download
auto-update-channel = stable

# custom keybindings:

# tools:
keybind = super+r=reload_config
keybind = cmd+shift+j=write_scrollback_file:paste
# keybind = global:cmd+grave_accent=toggle_quick_terminal

# navigation:
keybind = cmd+left_bracket=previous_tab
keybind = cmd+right_bracket=next_tab
keybind = cmd+comma=last_tab

# Drop the trailing dot once tinty 0.25.x is released
theme = "tinted-theming"

